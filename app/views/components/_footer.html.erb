<footer>
  <div class="logo">
    <%= image_tag "logo-dark.svg", class: "logo-img" %>
  </div>

  <div class="links">
    <%= link_to "Home", root_path, class: "link" %>
    <%= link_to "About", about_path, class: "link" %>
    <%= link_to "Work", root_path, class: "link" %>
    <%= link_to "Contact", root_path, class: "link" %>
    <%= link_to "Blogs", root_path, class: "link" %>
  </div>

  <div class="newsletter">
    <p class="mb-3">Liked my blogs? You can subscribe to my newsletter to receive latest blogs that I post. Thank you for your support!</p>

    <%= form_with class: 'newsletter-form' do |form| %>
      <div class="relative z-0 w-full mb-5 group">
        <%= form.email_field :email, placeholder: " ", class:'block py-2.5 px-0 w-full text-xs text-white-900 bg-transparent border-0 border-b-2 border-primary-50 appearance-none focus:outline-none focus:ring-0 focus:border-primary-light peer' %>
        <%= form.label :email, "Email Address", class:'peer-focus:font-medium absolute text-sm text-white-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-white peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6' %>
      </div>

      <%= form.submit "Sign me up for newsletter!", class: "sign-up-btn" %>
    <% end %>
  </div>
</footer>